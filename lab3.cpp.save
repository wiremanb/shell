#include <iostream>
#include <stdlib.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>
#include <string.h>
#include <stdio.h>

int main(int argc, char* argv[])
{
	bool quit = false;
	char userInput[256], *args;
	// Execute loop
	while(!quit)
	{
		std::cout << std::endl << "Lab3 >> ";
		std::cin.getline(userInput, sizeof(userInput));
		if(userInput == "quit") quit = true;
		else {
			pid_t pid = fork();
			if(pid == 0)
			{
				args = strtok(userInput, " ");
				execlp(&args[0], args, 0);
				std::cout << "[-] Error running command";
			} else {wait(0);}
		}		
	}
	// Cleanup	
	return 0;
}
